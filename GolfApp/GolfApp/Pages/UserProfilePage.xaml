<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="GolfApp.Pages.UserProfilePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="UserProfilePage">
    <VerticalStackLayout>
        <Image
            Margin="0,30,0,0"
            Aspect="AspectFill"
            HeightRequest="120"
            HorizontalOptions="Center"
            Source="{Binding User.AvatarUrl}"
            VerticalOptions="Start"
            WidthRequest="120">
            <Image.Clip>
                <EllipseGeometry
                    Center="60,60"
                    RadiusX="60"
                    RadiusY="60" />
            </Image.Clip>
        </Image>
        <Button
            Margin="0,10,0,0"
            Background="Black"
            Command="{Binding ChangeAvatarCommand}"
            Text="Change Avatar"
            WidthRequest="200" />

        <Border
            Margin="0,20,0,20"
            Background="LightGrey"
            StrokeShape="RoundRectangle 5"
            WidthRequest="300">
            <VerticalStackLayout>
                <Label
                    Padding="10"
                    FontAttributes="Bold"
                    FontSize="24"
                    HorizontalOptions="Center"
                    Text="{Binding User.UserName}" />

                <Label
                    Padding="10"
                    FontSize="16"
                    HorizontalOptions="Center"
                    Text="{Binding User.Email}" />
            </VerticalStackLayout>
        </Border>


        <Button
            Background="Black"
            Command="{Binding LogoutCommand}"
            CornerRadius="5"
            Text="Logout"
            WidthRequest="100" />


    </VerticalStackLayout>
</ContentPage>